<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
  "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
  "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
 <session-factory>
 <persistence-unit>
    <properties name="TarefasPU">
    <! - Database connection properties >
        <provider>org.hibernate.jpa.HibernateProvider</provider>
        <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
        <property name="hibernate.connection.url">jdbc:postgresql://localhost:5432/listatarefas</property>
        <property name="hibernate.connection.username">postgresql</property>
        <property name="hibernate.connection.password">dudu97</property>
 
     <! - Other Hibernate properties >
        <property name="hibernate.dialect">org.hibernate.dialect.PostgreSQLDialect</property>
        <property name="hibernate.show_sql">true</property>
        <property name="hibernate.format_sql">true</property>

    <! first time it is create and then onwards update>
        <property name="hbm2ddl.auto">update</property>
    <properties/>
 <persistence-unit/>    
 </session-factory>
</hibernate-configuration>
